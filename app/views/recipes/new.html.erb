<%= form_for @recipe do |f| %>
  <%= f.label "Recipe title:"%>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ingrident| %>
    <%= ingrident.label :name%>
    <%= ingrident.text_field :name %><br>

    <%= ingrident.label :quantity %>
    <%= ingrident.text_field :quantity %><br>

  <% end %>

  <%= f.submit %>
<% end %>